{
  "dashboard": {
    "id": null,
    "title": "Kubernetes Cluster rtfn02 - Namespace rtf-ab-nonp Monitoring",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "constant",
          "current": {
            "text": "rtfn02",
            "value": "rtfn02"
          },
          "hide": 0,
          "label": "Cluster",
          "query": "rtfn02"
        },
        {
          "name": "namespace",
          "type": "constant",
          "current": {
            "text": "rtf-ab-nonp",
            "value": "rtf-ab-nonp"
          },
          "hide": 0,
          "label": "Namespace",
          "query": "rtf-ab-nonp"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Total Pods",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "count(kube_pod_info{cluster=\"$cluster\", namespace=\"$namespace\"})",
            "instant": true,
            "legendFormat": "Pods"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "pluginVersion": "9.5.0"
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Running Pods",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 4,
          "y": 0
        },
        "targets": [
          {
            "expr": "count(kube_pod_status_ready{cluster=\"$cluster\", namespace=\"$namespace\", condition=\"true\"})",
            "instant": true,
            "legendFormat": "Running"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "pluginVersion": "9.5.0"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Containers",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 8,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(kube_pod_container_info{cluster=\"$cluster\", namespace=\"$namespace\"})",
            "instant": true,
            "legendFormat": "Containers"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "pluginVersion": "9.5.0"
      },
      {
        "id": 4,
        "type": "stat",
        "title": "CPU Usage",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\"}[5m]))",
            "instant": true,
            "legendFormat": "CPU Cores"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "short",
        "pluginVersion": "9.5.0"
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Memory Usage",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 16,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\"})",
            "instant": true,
            "legendFormat": "Memory"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "bytes",
        "pluginVersion": "9.5.0"
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Network I/O",
        "gridPos": {
          "h": 5,
          "w": 4,
          "x": 20,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{cluster=\"$cluster\", namespace=\"$namespace\"}[5m])) + sum(rate(container_network_receive_bytes_total{cluster=\"$cluster\", namespace=\"$namespace\"}[5m]))",
            "instant": true,
            "legendFormat": "Network"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "Bps",
        "pluginVersion": "9.5.0"
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "CPU Usage by Pod",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 5
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\", pod!=\"\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "interval": ""
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "short"
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Memory Usage by Pod",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 5
        },
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\", pod!=\"\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "interval": ""
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "bytes"
      },
      {
        "id": 9,
        "type": "table",
        "title": "Pod Status Overview",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 13
        },
        "targets": [
          {
            "expr": "kube_pod_info{cluster=\"$cluster\", namespace=\"$namespace\"}",
            "format": "table",
            "instant": true
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "Value": true,
                "__name__": true,
                "container": true,
                "endpoint": true,
                "instance": true,
                "job": true,
                "node": true,
                "service": true,
                "uid": true
              },
              "indexByName": {},
              "renameByName": {
                "pod": "Pod Name",
                "host_ip": "Host IP",
                "pod_ip": "Pod IP",
                "created_by_kind": "Created By",
                "created_by_name": "Creator Name"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "type": "table",
        "title": "Container Resource Usage",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 13
        },
        "targets": [
          {
            "expr": "sum(container_cpu_usage_seconds_total{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\", pod!=\"\", container!=\"POD\"}) by (pod, container)",
            "format": "table",
            "instant": true
          },
          {
            "expr": "sum(container_memory_working_set_bytes{cluster=\"$cluster\", namespace=\"$namespace\", image!=\"\", pod!=\"\", container!=\"POD\"}) by (pod, container)",
            "format": "table",
            "instant": true
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "transformations": [
          {
            "id": "seriesToColumns",
            "options": {
              "byField": "pod"
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "renameByName": {
                "Value #A": "CPU Usage (cores)",
                "Value #B": "Memory Usage (bytes)",
                "container": "Container",
                "pod": "Pod"
              }
            }
          }
        ]
      },
      {
        "id": 11,
        "type": "timeseries",
        "title": "Network I/O by Pod",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 21
        },
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{cluster=\"$cluster\", namespace=\"$namespace\", pod!=\"\"}[5m])) by (pod)",
            "legendFormat": "Received: {{pod}}",
            "interval": ""
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{cluster=\"$cluster\", namespace=\"$namespace\", pod!=\"\"}[5m])) by (pod)",
            "legendFormat": "Transmitted: {{pod}}",
            "interval": ""
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "Bps"
      },
      {
        "id": 12,
        "type": "timeseries",
        "title": "Filesystem Usage by Pod",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 21
        },
        "targets": [
          {
            "expr": "sum(container_fs_usage_bytes{cluster=\"$cluster\", namespace=\"$namespace\", pod!=\"\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "interval": ""
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "Prometheus"
        },
        "unit": "bytes"
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    }
  }
}